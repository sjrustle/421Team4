@model IEnumerable<WebApplication3.Models.Expenses>

@{
    ViewBag.Title = "Index";
    var a = ViewBag.UserId;
}

<h2>Index</h2>
@if (Model.Count() > 0)
{
    var meta = Model.First();
    <table class="table table-responsive table-striped">
        <thead>
            @* TODO: Get Label name from model properties *@
            @Html.Label("Expense Name")
        </thead>
        <thead>
            @* TODO: Get Label name from model properties *@
            @Html.Label("Expense Balance")
        </thead>
        @foreach (var account in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => account.ExpenseName)
                </td>
                <td>
                    @Html.DisplayFor(m => account.ExpenseAmount)
                
                </td>
                <td>
                    @Html.DisplayFor(m => account.ExpenseType)
                </td>
                <td>
                    @Html.ActionLink("Edit Account", "Edit", new { id = account.Id })
                </td>
            </tr>
        }
    </table>
}